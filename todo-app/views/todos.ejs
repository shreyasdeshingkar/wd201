<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Todo App</title>
    <script>
        var token = document.querySelector("meta[name='csrf-token']").getAttribute("content");
        const updateTodo = (id) => {
            const bool = document.querySelector(`#checkbox-${id}`).checked;
            console.log(bool);
            fetch(`/todos/${id}`, {
                method: "PUT",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    _csrf: token,
                    completed: bool
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((error) => {
                    console.log(error);
                });
        };
        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: { "Content-type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload()
                    }
                }).catch((error) => console.error(error))
        }
    </script>
</head>

<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include ('header.ejs') %>
                <a href="/signout" class="text-green-600 text-xl font-semibold border-b-2 py-2">Signout</a>
                <form action="/todos" method="post" autocomplete="on">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" id="csrfToken">
                    <div class="flex gap-2 py-4">
                        <div class="flex-auto">
                            <input type="text" name="title" placeholder="What's next?"
                                class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required />
                        </div>
                        <div class="flex-auto">
                            <input type="date" name="dueDate"
                                class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4"
                                required />
                        </div>
                        <div class="flex-none">
                            <button type="submit"
                                class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2 hover:bg-green-900">Add</button>
                        </div>
                    </div>
                </form>
                <%- include('todo.ejs', { title: "Overdue" , data: overdue, ID:"count-overdue" }) %>
                    <%- include('todo.ejs', { title: "Due Today" , data: dueToday, ID:"count-due-today" }) %>
                        <%- include('todo.ejs', { title: "Due Later" , data: dueLater, ID:"count-due-later" }) %>
                            <%- include('todo.ejs', { title: "Completed Items" , data: completedItems,
                                ID:"count-completed" }) %>
                                <%- include ('footer.ejs') %>
                                    <% if(messages && messages.error && messages.error.length> 0) { %>
                                        <% for(var i=0; i<messages.error.length; i++) { %>
                                            <p class="bg-red-300 my-4 list-none rounded border-gray-50 px-4 py-2">
                                                <%= messages.error[i] %>
                                            </p>
                                            <% } %>
                                                <% } %>
        </div>

    </div>
</body>

